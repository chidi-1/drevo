.fullpage
  margin-top 70px

  .one-third
    width 33.34%
  .two-third
    width 66.67%

  .fp-tableCell
    display block
    vertical-align top

    @media sm
      vertical-align bottom

  .section
    position relative

    &.footer
      .width-wrap
        .justifyed
          @media sm
            @media land
              display flex !important

    &-bottom-content
      position absolute
      left 0
      right 0
      bottom 0

      &.fullpage--bottom-list
        li
          padding-bottom 70px

          @media md
            padding-bottom 0

          &:last-child
            padding-bottom 70px

    &-top-content
      position absolute
      left 0
      right 0
      top 0

    &-strech-content
      position absolute
      left 0
      right 0
      top 0
      bottom 0

    &-center-content
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      padding-bottom 70px
      display flex
      align-items center

    &-text
    .justifyed
      @media md
        display block !important

      .one-half
        @media md
          widht 100% !important
          margin-bottom 30px

        @media sm
          display block
          margin-bottom 10px

        img
          @media md
            max-height 25vh

          @media sm
            display none

        h5
          @media sm
            font-size 14px

    &-title
      position relative
      background-size cover !important

      .section-bottom-content
        padding-bottom 70px

      .width-wrap
        @media sm
          align-content flex-end

      .breadcrumbs
        padding-bottom 25px
        padding-left 3px
        display block
        width 100%

        li
          a
            color $c_white

          &:after
            color $c_white

      h1
        color $c_white
        margin-bottom 70px
        display block
        width 100%

        @media md
          font-size 36px
          line-height 40px

        @media sm
          margin-top 15px

        small
          @media md
            font-size 24px

          @media sm
            margin-bottom 30px
            margin-top 15px

      &:before
        position absolute
        content ""
        z-index 5
        left 0
        right 0
        bottom 0
        height 40vh
        background linear-gradient(to bottom, rgba(0,0,0,0) 0%,rgba(0,0,0,0.5) 100%)

      .width-wrap
        z-index 10
        align-content flex-end
        align-items flex-end
        position relative
        top 0

  h3
    margin-bottom 60px

    &:last-child
      margin-bottom 0

  img
    max-width 100%
    margin-bottom 35px
    display block

    &:last-child
      margin-bottom 0

  .width-wrap
    /*@media sm
      top 70px
      display flex
      flex-flow row wrap
      padding 0 15px
      height calc(100vh - 70px)
      align-content space-around*/

    .breadcrumbs
      padding-top 30px
      padding-bottom 1vh

      & + h1
        @media sm
          font-size 30px
          line-height 36px
          margin-bottom 1vh

    .one-half
      @media sm
        margin-bottom 1vh

  &--bottom-list
    z-index 5
    display flex
    white-space nowrap

    @media md
      display block
      position absolute
      bottom 0
      left 0
      right 0

    li
      white-space normal
      display inline-flex
      align-items center
      justify-content flex-start
      padding 0 65px
      height 220px
      font-size 36px
      line-height normal
      font-family $f_Exo2_th
      color $c_white
      box-sizing content-box

      @media md
        white-space normal
        width 100% !important
        display flex
        height calc(22vh - 20px)
        box-sizing border-box

      @media sm
        font-size 18px
        line-height normal
        height calc(33vh/2)
        padding 0 15px

      &:last-child
        @media md
          height calc(22vh + 70px)
          padding-bottom 70px

        @media sm
          height calc(33vh/2 + 70px)

  &--inner-slider
    position relative

    &-el
      height 100vh
      background-size cover !important

    .owl-nav
      div
        position absolute
        z-index 10
        width 58px
        height 58px
        top 50%
        margin-top -29px

      .owl-prev
        background $c_red url("../img/icon--arrow-left.svg") no-repeat 50% 50%
        background-size 70% 70%
        left 50px

        @media sm
          left 0

      .owl-next
        background $c_red url("../img/icon--arrow-right.svg") no-repeat 50% 50%
        background-size 70% 70%
        right 50px

        @media sm
          right 0

    .owl-dots
      position absolute
      left 0
      right 0
      bottom calc(5vh + 70px)
      text-align center
      z-index 10

      .owl-dot
        display inline-block
        vertical-align top
        width 13px
        height 13px
        border-radius 13px
        background $c_white
        margin 0 13px

        &.active
          background $c_red

  .section-top
    background-size cover !important