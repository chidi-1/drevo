.footer
  position relative

  @media md
    padding-bottom 30px

  @media sm
    padding-top 44px
    padding-bottom 90px

  &.footer-slider
    padding-top 0

    @media sm
      padding-bottom 0

  .width-wrap
    padding-top 70px

    @media md
      padding-top 0

    @media sm
      padding 70px 15px 0

  &-anchors
    .width-wrap
      padding-top 140px

  &-slider
    .fp-tableCell
      height 100vh
      display flex
      align-items center
      padding-bottom 70px

      @media sm
        align-items flex-end

      .width-wrap
        padding-top 70px

        @media md
          padding-top 0

        @media sm
          top 70px
          padding-top 0
          display flex
          flex-flow row wrap
          height calc(100vh - 70px)
          align-content space-around

      .justifyed
        padding-top 0 !important

        @media sm
          display block
          width 100%
          margin-bottom 2vh !important

        &:nth-child(1)
          margin-bottom 7vh

        &:nth-child(2)
          .footer--left
            @media sm
              position relative
              left auto

          .footer--right
            @media md
              margin-top -15vh

              @media land
                margin-top -17.5vh

            @media sm
              margin-top 0

            ul.social
              @media md
                margin-bottom 7vh

              @media sm
                margin-bottom 2vh

              li
                @media sm
                  margin-right 15px

                a
                  @media sm
                    margin-bottom 0

                  img
                    @media sm
                      width 20px

              & + p
                @media sm
                  font-size 12px
                  line-height 15px

            span
              @media sm
                display none

        .footer--left
          @media sm
            margin-bottom 2vh

            @media land
              display inline-block
              vertical-align top
              width 48%

        .footer--right
          @media sm
            @media land
              display inline-block
              vertical-align top
              width 48%

        .footer-projects
          li
            a
              margin-bottom 5px
              line-height 10px

              img
                @media sm
                  height 15px

        span,
        a
          @media sm
            margin-bottom 1vh
            font-size 12px
            line-height 16px

          &.strong
            @media sm
              font-size 14px
              line-height 14px

  .justifyed
    @media md
      display flex !important

    @media sm
      display  block !important
      padding-left 19px

    &:nth-child(1)
      margin-bottom 77px

      @media sm
        margin-bottom 54px

    &:nth-child(2)
      margin-bottom 25px

      @media md
        margin-bottom 95px

      @media sm
        margin-bottom 32px

      .footer--right
        @media md
          margin-top -155px

        @media sm
          margin-top 0

        span
          @media md
            font-size 16px

    &:nth-child(3)
      margin-bottom 30px

      .footer--left
        @media sm
          margin-bottom 0

  &--left
    display inline-block
    vertical-align top
    width 490px

    @media md
      width 265px

    @media sm
      display block
      width 100%
      margin-bottom 43px

  &--right
    display inline-block
    vertical-align top
    width 545px

    @media md
      width 253px

  ul.social
    @media md
      margin-bottom 75px

    @media sm
      margin-bottom 38px

  a,
  span
    font-size 18px
    line-height 24px
    font-family $f_Exo2
    display block
    margin-bottom 20px

    @media md
      margin-bottom 12px
      font-size 14px
      line-height 20px

    a
      display inline

    &.underline
      text-decoration underline

    &.gray
      font-family $f_Exo2_l
      opacity 0.7

    &.strong
      font-size 30px
      line-height 40px
      margin-bottom 0

      @media md
        font-size 18px
        line-height 24px

      @media sm
        line-height 22px

  p
    font-size 16px
    font-family $f_Exo2_l

    @media md
      font-size 14px
      line-height 17px

  &-projects
    @media md
      margin-left -6px

    li
      display block
      margin-bottom 10px

      a
        display inline-block
        vertical-align top
        margin-right 20px
        text-decoration underline
        margin-bottom 0

        @media md
          margin-right 10px

        &.footer-projects--el-name
          margin-left 17px
          font-size 16px
          line-height 28px

          @media md
            margin-left 0
            margin-bottom 0 !important
            line-height 16px !important

  .social
    li
      display inline-block
      vertical-align top
      margin-right 20px

      @media md
        margin-right 29px
        margin-top 6px

  .mobile-position
    @media sm
      position absolute
      bottom 20px
      left 34px
      margin-bottom 0

    span
      @media sm
        margin-bottom 5px