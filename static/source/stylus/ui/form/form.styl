.main-form
  width 625px
  display block
  margin 0 auto
  text-align center

  @media sm
    width auto

  h5
    margin-bottom 40px

  label
    display flex
    align-items flex-start
    justify-content space-between
    margin-bottom 10px

    @media md
      display block
      margin-bottom 20px

    span
      display inline-block
      vertical-align top
      width 200px
      text-align left
      color #525151
      font-size 25px
      font-family $f_Exo2_b

      @media md
        display block
        margin-bottom 10px
        font-size 20px
        font-family $f_Exo2_m

      @media sm
        font-size 16px

    .inp
      display inline-block
      vertical-align top
      width 425px
      outline none
      border 2px solid #dddddd
      height 59px
      padding-left 20px
      font-size 18px

      @media md
        display block
        width 100%
        height 49px

    textarea.inp
      height 155px
      padding-top 20px
      resize none

    .jq-file
      display inline-block
      vertical-align top
      width 425px
      outline none
      box-shadow none
      border-radius 0

      @media md
        display block
        width 100%

      .jq-file__name
        display flex
        align-items center
        justify-content center
        border 2px solid #dddddd
        height 59px
        padding 0 10px
        font-size 18px
        box-shadow none
        width 358px
        background #dddddd
        color #525151
        border-radius 0

        @media md
          width 100%

        @media sm
          font-size 14px

      .jq-file__browse
        display none

    .jq-selectbox
      display inline-block
      vertical-align top
      width 425px
      border none
      box-shadow none

      @media md
        display block
        width 100% !important
        margin 0 auto

      .jq-selectbox__select
        display block
        outline none
        border 2px solid #dddddd
        height 59px
        border-radius 0
        background transparent
        box-shadow none

        .jq-selectbox__select-text
          display flex
          padding-left 10px
          padding-right 45px
          height 56px
          align-items center
          justify-content flex-start

        .jq-selectbox__trigger-arrow
          top 49%

      .jq-selectbox__dropdown
        ul
          li
            display block
            text-align left
            white-space normal

            &.selected,
            &.disabled
              background transparent !important
              color $c_black !important

            &.disabled
              display none

  .btn
    margin-left 29px

    @media sm
      margin 0 auto
