.news-list
  &--el
    display inline-block
    vertical-align top
    min-height 655px

    @media md
      width 100%
      min-height 10px
      display flex
      align-items stretch

    @media sm
      display block

    &:nth-child(even)
      background #f8f8f8

    &-img
      display block
      height 272px

      @media md
        height auto
        min-height 216px
        width 53%
        display inline-block
        vertical-align top

      @media sm
        display none

    &-content
      display block
      padding 45px 60px

      @media md
        display inline-block
        vertical-align top
        width 225px
        padding 24px 0
        margin-left 40px

      @media sm
        display block
        width auto
        text-align center
        padding 35px 40px
        margin-left 0

    &-time
      display block
      margin-bottom 11px

      @media md
        margin-bottom 0

      time
        color $c_red
        font-family $f_Exo2
        font-size 18px
        line-height 24px

        @media md
          font-size 16px
          line-height 20px

        @media sm
          font-size 14px
          line-height 16px

    &-title
      display block
      font-family $f_Exo2_b
      font-size 18px
      line-height 24px
      margin-bottom 11px

      @media md
        font-size 16px
        line-height 20px
        margin-bottom 0

      @media sm
        font-size 14px
        line-height 16px

    p
      line-height 24px

      @media md
        line-height 20px

      @media sm
        line-height 17px

.news-top
  padding-bottom 66px

  .btn-wrap
    display block
    text-align right
    margin-top 30px
    padding 30px 0 57px
    border-top 1px solid #e5e5e5

    @media sm
      text-align center

  .one-third,
  .two-third
    @media md
      display block
      width 100%

  .justifyed
    margin-bottom 35px

    @media md
      margin-bottom 56px

    @media sm
      display block !important

    img
      display inline-block
      vertical-align top
      width 355px

      @media md
        width 322px

      @media sm
        width auto
        display block
        margin 0 -15px 30px

    h6
      display inline-block
      vertical-align top
      width 285px
      margin-top -6px
      margin-bottom 0

      @media md
        width 215px

  p
    line-height 24px
    margin-bottom 24px

    @media md
      font-size 14px
      line-height 17px
      margin-bottom 16px

  time
    display block
    padding-top 16px
    font-size 16px
    line-height 24px
    font-family $f_Exo2_l

.news-article
  padding-bottom 66px

  @media md
    padding-bottom 0
    margin-bottom 0 !important

  &-btn
    @media md
      display block
      text-align right
      margin-top 30px
      padding 30px 0 57px
      border-top 1px solid #e5e5e5

    @media sm
      text-align center
      padding-bottom 0

  .one-third,
  .two-third
    @media md
      display block
      width 100%

  .two-third
    @media md
      margin-bottom 27px

  p
    line-height 24px
    margin-bottom 24px

    @media md
      font-size 14px
      line-height 18px
      margin-bottom 14px

  time
    display block
    padding-top 16px
    font-size 16px
    line-height 24px
    font-family $f_Exo2_l

    @media md
      padding-top 7px
      margin-bottom 20px

.news-hot
  display block
  background #f7f7f7
  padding 30px 29px

  @media md
    padding 12px 29px

  @media sm
    padding 12px 15px
    margin 0 -15px

  li
    display block
    margin-bottom 48px

    @media md
      margin-bottom 26px

    time
      display block
      font-size 16px
      line-height 24px
      font-family $f_Exo2_l
      margin-bottom 9px

    a
      line-height 24px

      @media sm
        font-size 18px

      strong
        display block
        line-height 24px






