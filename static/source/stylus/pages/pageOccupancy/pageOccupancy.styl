.occupacy
  &-info
    display block
    padding 44px 0 40px
    background url("../img/bg--occupacy.jpg") no-repeat
    background-size cover
    text-align center
    margin-bottom 73px

    @media md
      margin-bottom 42px

    @media sm
      margin 0 -15px
      padding 34px 0 40px

    img
      display block
      max-width 30%
      margin 0 auto 43px

      @media md
        max-width 56% !important
        margin 0 auto 56px

      @media sm
        margin 0 auto 32px
        max-width 67% !important

    h5
      margin-bottom 15px

      @media md
        margin-bottom 25px

      @media sm
        margin-bottom 27px

      strong
        display block

    span
      font-size 24px
      margin-bottom 32px
      display block

      @media sm
        line-height 29px
        margin-bottom 42px

      i
        font inherit
        font-style normal

        @media sm
          display block

      strong
        display block
        margin-bottom 37px

  &-objects.justifyed
    align-items stretch

    @media md
      display flex !important

    @media sm
      display block !important

    .one-half
      padding 59px 72px 126px

      @media md
        display inline-block
        vertical-align top
        width 275px
        padding 40px 45px 52px
        margin-bottom 0

      @media sm
        display block
        width auto
        margin 0 -15px
        padding 40px 38px 50px

      &:last-child
        h2
          @media md
            font-size 36px
        h5
          @media md
            font-size 18px
            margin-top 21px

      .title
        display block
        min-height 180px

        @media md
          padding-bottom 30px
          min-height 10px

        h2,
        h5
          color $c_white

        h5
          @media md
            font-size 18px

        h3
          margin-top 6px

      ul
        li
          display block
          margin-bottom 22px

          @media md
            margin-bottom 13px

          @media sm
            margin-bottom 12px

          &:last-child
            margin-bottom 0

          a
            display inline-block
            vertical-align top
            border-bottom 2px solid $c_white
            font-size 30px
            line-height normal
            font-family $f_Exo2_l
            color $c_white

            @media md
              font-size 18px
              border-bottom 1px solid $c_white

  &-list
    border-top 1px solid #e4e4e4

    &--el
      display block
      border-bottom 1px solid #e4e4e4
      background-size 50% auto !important
      min-height 306px
      padding-bottom 20px
      position relative

      @media md
        background-size auto 100% !important

      @media sm
        background none !important
        padding 30px 0
        min-height 10px

      &:before
        position absolute
        content ""
        left 0
        top 0
        bottom 0
        width 50%
        background $c_white

      .width-wrap
        position relative
        z-index 10

      &-content
        display inline-block
        vertical-align top
        width 381px
        padding-top 32px

        @media md
          width 285px

        @media sm
          display block
          width auto
          padding 0 19px

        span
          display block
          margin-bottom 28px
          font-size 24px

          @media md
            font-size 18px
            margin-bottom 29px

          &.title
            font-size 36px
            font-family $f_Exo2_m

          strong
            @media md
              font-size 23px

        .btn
          font-size 18px
          padding 13px 47px

      &-logo
        margin-top 33px
        display inline-flex
        align-items center
        justify-content center
        vertical-align top
        border 1px solid  #e4e4e4
        background $c_white
        width 294px
        height 160px

        @media md
          position absolute
          left 50%
          margin-left -5px

        @media sm
          display none

        img
          max-width 79%

.sell-info
  display block
  padding 44px 0 40px
  background url("../img/bg--sell.jpg") no-repeat
  background-size cover
  text-align center
  margin-bottom 73px

  @media md
    margin-bottom 41px

  @media sm
    margin 0 -15px 30px

  img
    display block
    max-width 30%
    margin 0 auto 43px

    @media md
      max-width 56%

    @media sm
      max-width 75%
      margin 0 auto 28px

  h5
    margin-bottom 15px
    color $c_white

    @media md
      font-size 30px

    @media sm
      margin-bottom 29px

    strong
      display block

  .links
    display block
    text-align center
    padding 0 40px 10px

    @media sm
      padding 0 5px 37px

    li
      display inline-block
      vertical-align top
      margin 0 10px 10px

      @media md
        margin-bottom 14px

      @media sm
        margin-bottom 11px

      a
        display inline
        font-size 24px
        color $c_white
        border-bottom 1px solid $c_white
        transition all 0.3s ease-in-out

        @media sm
          font-size 18px

        &:hover
          border-bottom 1px solid transparent

  span
    font-size 24px
    margin-bottom 32px
    display block
    color $c_white

    strong
      display block

  .btn
    background rgba(255,255,255,0.3)

.sell-objects.justifyed
  align-items stretch
  margin-bottom 73px

  @media md
    display flex !important
    margin-bottom 41px

  @media sm
    display  block !important
    margin-bottom 0

  .one-half
    padding 51px 72px 46px
    border 1px solid $c_black

    @media md
      display inline-block
      vertical-align top
      width 275px
      padding 19px 20px 40px 30px
      margin-bottom 0

    @media sm
      display block
      width auto
      min-height 380px
      margin-bottom 30px

    h2
      font-size 46px
      text-transform none

      @media md
        font-size 29px

    h5
      margin-top 10px
      margin-bottom 35px

      @media md
        font-size 18px
        margin-top 6px
        margin-bottom 14px

    ul
      li
        display block
        margin-bottom 20px

        @media md
          margin-bottom 8px
          line-height 20px

        &:last-child
          margin-bottom 44px

          @media md
            margin-bottom 26px

        a
          display inline
          line-height normal
          font-family $f_Exo2_l
          font-size 22px
          border-bottom 1px solid $c_black
          transition all 0.3s ease-in-out

          @media md
            font-size 14px
            line-height 20px

          &:hover
            border-bottom 1px solid transparent

    .btn
      font-size 14px
      padding 6px 36px






